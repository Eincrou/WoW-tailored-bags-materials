<Window x:Class="TailoringBagsRawMaterials.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tailored Bags Materials Calculator" Height="560" Width="700"
        xmlns:view="clr-namespace:TailoringBagsRawMaterials.View">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="220"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border BorderThickness="2" BorderBrush="Black" Grid.Row="0" Grid.Column="0">
            <view:HexweaveBagUserControl/>
        </Border>
        <Border BorderThickness="2" BorderBrush="Black" Grid.Row="0" Grid.Column="1">
            <view:RoyalSatchelUserControl/>
        </Border>
        <Border BorderThickness="2" BorderBrush="Black" Grid.Row="1" Grid.Column="0">
            <view:IllusionaryBagUserControl/>
        </Border>
        <Border BorderThickness="2" BorderBrush="Black" Grid.Row="1" Grid.Column="1">
            <view:GlacialBagUserControl/>
        </Border>
        <!--<view:HexweaveBagUserControl Margin="5"/>-->
    </Grid>
</Window>
